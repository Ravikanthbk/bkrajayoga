<div class="well history-content">
<div class="form-group">
<h2 class="well-h2">
  <%= @experience.title %>
</h2>
</div>
<div class="form-group clearfix">
  <%= @experience.content.html_safe %>
</div>

<div class="form-group text-right">
  <strong>Published at:</strong>
  <%= @experience.published_at.strftime("%d/%m/%Y %I:%M %p")  %>
</div>

<div class="well">
  <% if !flash[:success].blank? %>
   <div class="alert alert-success"> <%= flash[:success] %></div>
  <% end %>

<h4>Comments (<%= @experience.comments.count %>)</h4>
<%= render @experience.comments %> 
</div>

<div class="well">
  <h4>Leave a Comment:</h4>
  <%= render 'comments/form', :object => @experience %> 
</div>
</div>
