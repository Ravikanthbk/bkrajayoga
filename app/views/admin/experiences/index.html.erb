<div class="well history-content">
<h3>Experience List	  
  <p class="pull-right">
    <%= link_to 'Add New Experience (+)', new_admin_experience_path, :class=>"btn btn-default active" %>
  </p>	  
</h3>
<% unless @experiences.blank? %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Published</th>
      <!-- <th>Published at</th> -->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.title %></td>
        <td><%= is_published(experience.published) %></td>
        <!-- <td><%#= experience.published_at.strftime("%d/%m/%Y %I:%M %p") %></td> -->
        <td><%= link_to 'Show', [:admin, experience] %></td>
        <td><%= link_to 'Edit', edit_admin_experience_path(experience) %></td>
        <td><%= link_to 'Delete', [:admin, experience], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<% end %>
