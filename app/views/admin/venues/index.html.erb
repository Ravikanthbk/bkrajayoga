<div class="well history-content">
<p id="notice"><%= notice %></p>
<h3>Venue List	  
  <p class="pull-right">
    <%= link_to 'Add New Venue (+)', new_admin_venue_path, :class=>"btn btn-default active" %>
  </p>	  
</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>City locality</th>
      <th>Postcode</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_venues.each do |admin_venue| %>
      <tr>
        <td><%= admin_venue.name %></td>
        <td><%= admin_venue.address %></td>
        <td><%= admin_venue.phone %></td>
        <td><%= admin_venue.city_locality %></td>
        <td><%= admin_venue.postcode %></td>
        <td>
           <% country = ISO3166::Country[admin_venue.country] %>
           <%=  country.translations[I18n.locale.to_s] || country.name %>
        </td>
        <td><%= link_to 'Show', admin_venue %></td>
        <td><%= link_to 'Edit', edit_admin_venue_path(admin_venue) %></td>
        <td><%= link_to 'Delete', admin_venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
