<div class="well events-all">
  <% if @mailing_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mailing_user.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @mailing_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h2 class="events-title">
  Register for Mailing List
</h2>
<%= simple_form_for(@mailing_user) do |f| %>
  <div class="form-group">
    <p><%= f.label "The user name:" %>: <%= f.text_field :name, :class => "form-control" %></p>
  </div>
  <div class="form-group">
    <p><%= f.label "Email address:" %>: <%= f.text_field :email, :class => "form-control" %></p>
  </div>
  <div class="form-group">
    <p><%= f.label "Phone number:" %>: <%= f.text_field :phone_no, :class => "form-control" %></p>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>

