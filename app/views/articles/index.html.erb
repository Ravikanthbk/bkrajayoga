<div class="well history-content">
  <% @articles.each do |article| %>
    <% if article.published %>
      <h3 class="well-h3"><%= link_to article.title, article, :class => "list-h3"%></h3>
      <div class="clearfix">
        <p><%#= article.content.html_safe %></p>
	<p><%= link_to "Comments (#{article.comments.count})", article %> </p>
      </div>
      <hr>
    <% end %>
  <% end %>
</div>
